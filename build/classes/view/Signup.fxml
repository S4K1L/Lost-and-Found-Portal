<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="640.0" prefWidth="340.0" spacing="15"
      style="-fx-background-color: linear-gradient(to bottom, #1f1f2e, #2b2b44); -fx-padding: 40;"
      xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.SignupController">

    <!-- Top Center Logo -->
    <ImageView fx:id="logoImage" fitHeight="180.0" fitWidth="180.0" preserveRatio="true">
        <image>
            <Image url="@../images/lost.png" /> <!-- Correct relative path -->
        </image>
    </ImageView>
    
    <Label text="📝 Sign Up"
           style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" />
    
    <TextField fx:id="nameField"
               promptText="Full Name"
               style="-fx-background-color: #3a3a5c; -fx-text-fill: white; -fx-font-size: 14px;" />

    <TextField fx:id="emailField"
               promptText="Email Address"
               style="-fx-background-color: #3a3a5c; -fx-text-fill: white; -fx-font-size: 14px;" />

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   style="-fx-background-color: #3a3a5c; -fx-text-fill: white; -fx-font-size: 14px;" />
    
    <Button fx:id="signupButton"
            prefHeight="30.0"
            prefWidth="171.0"
            text="Register"
            style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />

    <Hyperlink fx:id="goToLogin"
               text="Already have an account? Login"
               style="-fx-text-fill: #90caf9;" />
</VBox>
