<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: linear-gradient(to bottom, #1a1a2c, #262642); -fx-padding: 20;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 22px; -fx-text-fill: white;" text="ðŸ‘¤ My Profile" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" style="-fx-background-color: #42a5f5; -fx-text-fill: white;" text="â¬… Back" />
        </HBox>
    </top>

    <!-- Profile Info -->
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="Profile Details" />

            <Label fx:id="nameLabel" prefHeight="20.0" prefWidth="212.0" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Name: " />
            <Label fx:id="emailLabel" prefHeight="20.0" prefWidth="210.0" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Email: " />
            <Label fx:id="joinDateLabel" style="-fx-text-fill: white; -fx-font-size: 14px;" />

            <!-- Edit Contact Info -->
            <HBox spacing="8" />

            <!-- Change Password -->
            <PasswordField fx:id="passwordField" prefWidth="180" promptText="New Password" />
            <Button fx:id="updatePasswordButton" style="-fx-background-color: #ffa726; -fx-text-fill: white;" text="Change Password" />
        </VBox>
    </center>
</BorderPane>
